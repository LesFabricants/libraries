/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "preserve",
    "baseUrl": "./",
    "paths": {
      "ngx-flex-limitter": [
        "dist/ngx-flex-limitter/ngx-flex-limitter",
        "dist/ngx-flex-limitter",
        "projects/ngx-flex-limitter/src/public-api.ts"
      ],
      "ngx-progress": [
        "dist/ngx-progress/ngx-progress",
        "dist/ngx-progress",
        "projects/ngx-progress/src/public-api.ts"
      ]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  },
  "files": [],
  "references": [
    {
      "path": "./projects/demo/tsconfig.app.json"
    },
    {
      "path": "./projects/demo/tsconfig.spec.json"
    },
    {
      "path": "./projects/ngx-progress/tsconfig.lib.json"
    },
    {
      "path": "./projects/ngx-progress/tsconfig.spec.json"
    },
    {
      "path": "./projects/ngx-flex-limitter/tsconfig.lib.json"
    },
    {
      "path": "./projects/ngx-flex-limitter/tsconfig.spec.json"
    }
  ]
}
